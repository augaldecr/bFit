@model bFit.Web.Models.UserViewModel;

<div class="form-row">
    <div class="form-group col-md-4">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="LastName1" class="control-label"></label>
        <input asp-for="LastName1" class="form-control" />
        <span asp-validation-for="LastName1" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="LastName2" class="control-label"></label>
        <input asp-for="LastName2" class="form-control" />
        <span asp-validation-for="LastName2" class="text-danger"></span>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-3">
        <label asp-for="TownId" class="control-label"></label>
        <select asp-for="TownId" asp-items="@Model.Towns" class="form-control"></select>
        <span asp-validation-for="TownId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-3">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group col-md-3">
        <label asp-for="CellPhone" class="control-label"></label>
        <input asp-for="CellPhone" class="form-control" />
        <span asp-validation-for="CellPhone" class="text-danger"></span>
    </div>
</div>