@model bFit.Web.Models.UserViewModel;

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="LastName1" class="control-label"></label>
            <input asp-for="LastName1" class="form-control" />
            <span asp-validation-for="LastName1" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="LastName2" class="control-label"></label>
            <input asp-for="LastName2" class="form-control" />
            <span asp-validation-for="LastName2" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="CellPhone" class="control-label"></label>
            <input asp-for="CellPhone" class="form-control" />
            <span asp-validation-for="CellPhone" class="text-danger"></span>
        </div>
    </div>

<div class="form-row">

    <div class="form-group col-md-4">
        <label asp-for="CountryId" class="control-label"></label>
        <select asp-for="CountryId" asp-items="@Model.Countries" class="form-control"></select>
        <span asp-validation-for="CountryId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label asp-for="StateId" class="control-label"></label>
        <select disabled asp-for="StateId" asp-items="@Model.States" class="form-control"></select>
        <span asp-validation-for="StateId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label asp-for="CountyId" class="control-label"></label>
        <select disabled asp-for="CountyId" asp-items="@Model.Counties" class="form-control"></select>
        <span asp-validation-for="CountyId" class="text-danger"></span>
    </div>
</div>

<div class="form-row">

    <div class="form-group col-md-4">
        <label asp-for="DistrictId" class="control-label"></label>
        <select disabled asp-for="DistrictId" asp-items="@Model.Districts" class="form-control"></select>
        <span asp-validation-for="DistrictId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label asp-for="TownId" class="control-label"></label>
        <select disabled asp-for="TownId" asp-items="@Model.Towns" class="form-control"></select>
        <span asp-validation-for="TownId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
</div>