@model bFit.Web.Models.EditExerciseViewModel

@{
    ViewData["Title"] = "Editar ejercicio";
    ViewData["BackAction"] = "Index";
}

    <partial name="Controls/_Header" />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-row">

            <div class="form-group col-md-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="ExerciseTypeId" class="control-label"></label>
                <select asp-for="ExerciseTypeId" asp-items="@Model.ExerciseTypes" class="form-control"></select>
                <span asp-validation-for="ExerciseTypeId" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="VideoUrl" class="control-label"></label>
                <input asp-for="VideoUrl" class="form-control" />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <partial name="Controls/_BtnSubmit" />
                <partial name="Controls/_BtnBack" />
            </div>
        </div>

    </form>
        <partial name="Controls/_Footer" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
