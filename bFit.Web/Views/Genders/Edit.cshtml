@model bFit.Web.Data.Entities.Common.Gender

@{
    ViewData["Title"] = "Editar género";
    ViewData["BackAction"] = "Details";
}

<partial name="Controls/_Header" />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-row">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <partial name="Controls/_BtnSubmit" />
            <partial name="Controls/_BtnIndex" />
        </div>
    </div>
</form>
<partial name="Controls/_Footer" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
