@model bFit.Web.Data.Entities.Profiles.Franchise

@{
    ViewData["Title"] = Model.TradeName;
    ViewData["BackAction"] = "Index";
    ViewData["EditAction"] = "Edit";
    ViewData["DetailsAction"] = "Details";
}

<partial name="Controls/_Header" />

<div class="row">
    <div class="input-group mb-3 col-md-4">
        <div class="input-group-prepend">
            <span class="input-group-text" id="legal_id">
                @Html.DisplayNameFor(model => model.LegalId):
            </span>
        </div>
        <input type="text" class="form-control" aria-label="legal_id" disabled
               aria-describedby="fullname" value="@Html.DisplayFor(model => model.LegalId)">
    </div>
    <div class="input-group mb-3 col-md-4">
        <div class="input-group-prepend">
            <span class="input-group-text" id="registered_name">
                @Html.DisplayNameFor(model => model.RegisteredName):
            </span>
        </div>
        <input type="text" class="form-control" aria-label="registered_name" disabled
               aria-describedby="address" value="@Html.DisplayFor(model => model.RegisteredName)">
    </div>
    <div class="input-group mb-3 col-md-4">
        <div class="input-group-prepend">
            <span class="input-group-text" id="trade_name">
                @Html.DisplayNameFor(model => model.TradeName):
            </span>
        </div>
        <input type="text" class="form-control" aria-label="trade_name" disabled
               aria-describedby="town" value="@Html.DisplayFor(model => model.TradeName)">
    </div>
</div>

<div class="row">
    <div class="input-group mb-3 col-md-6">
        <div class="input-group-prepend">
            <span class="input-group-text" id="phone_number">
                @Html.DisplayNameFor(model => model.PhoneNumber):
            </span>
        </div>
        <input type="text" class="form-control" aria-label="phone_number" disabled
               aria-describedby="fullname" value="@Html.DisplayFor(model => model.PhoneNumber)">
    </div>
    <div class="input-group mb-3 col-md-6">
        <div class="input-group-prepend">
            <span class="input-group-text" id="email">
                @Html.DisplayNameFor(model => model.Email):
            </span>
        </div>
        <input type="email" class="form-control" aria-label="email" disabled
               aria-describedby="email" value="@Model.Email">
    </div>
</div>

<div>
    <partial name="Controls/_BtnEdit" view-data="ViewData" model="@Model" />
    <partial name="Controls/_BtnBack" view-data="ViewData" />
</div>
<partial name="Controls/_Footer" />