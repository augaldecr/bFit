@model IEnumerable<bFit.Web.Data.Entities.Common.Town>

@{
    ViewData["Title"] = "Ciudades";
    ViewData["EditAction"] = "Edit";
}

<partial name="Controls/_HeaderTable" />
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.District)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.Name)
            </td>
            <td>
                <partial name="Controls/_BtnEditNoText" model="item" />
                <partial name="Controls/_BtnDetails" model="item" />
                <partial name="Controls/_BtnDelete" model="item" />
            </td>
        </tr>
    }
</tbody>
<partial name="Controls/_FooterTable" />