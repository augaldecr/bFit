@model bFit.Web.Models.EditGymViewModel

@{
    ViewData["Title"] = "Editar gimnasio";
    ViewData["BackAction"] = "Details";
}

<partial name="Controls/_Header" />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <partial name="_Gym" />

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="TownId" class="control-label"></label>
                <select asp-for="TownId" asp-items="@Model.Towns" class="form-control"></select>
                <span asp-validation-for="TownId" class="text-danger"></span>
            </div>
        </div>

    <div class="form-group">
        <partial name="Controls/_BtnSubmit" />
        <partial name="Controls/_BtnBackWithID" model="@Model" />
    </div>
</form>
<partial name="Controls/_Footer" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
