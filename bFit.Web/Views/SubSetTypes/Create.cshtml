@model bFit.Web.Data.Entities.Workouts.SubSetType

@{
    ViewData["Title"] = "Crear modalidad de ejercicio";
}

<partial name="Controls/_Header" />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <partial name="Controls/_BtnSubmit" />
            <partial name="Controls/_BtnBack" />
        </div>
    </div>
</form>
<partial name="Controls/_Footer" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}