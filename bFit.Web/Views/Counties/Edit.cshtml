@model bFit.Web.Models.EditCountyViewModel

@{
    ViewData["Title"] = "Editar cantón";
    ViewData["BackAction"] = "Details";
}

<partial name="Controls/_Header" />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="CountryId" class="control-label"></label>
            <select asp-for="CountryId" asp-items="@Model.Countries" class="form-control"></select>
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="StateId" class="control-label"></label>
            <select disabled asp-for="StateId" asp-items="@Model.States" class="form-control"></select>
            <span asp-validation-for="StateId" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="Name" class="control-label"></label>
            <input disabled asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group">
        <partial name="Controls/_BtnSubmit" />
        <partial name="Controls/_BtnBackWithID" model="@Model" />
    </div>
</form>
<partial name="Controls/_Footer" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/get_states.js"></script>
}