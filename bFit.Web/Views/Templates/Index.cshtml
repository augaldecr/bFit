@model IEnumerable<bFit.Web.Data.Entities.Workouts.Template>

@{
    ViewData["Title"] = "Plantillas";
    ViewData["EditAction"] = "Edit";
}

<partial name="Controls/_HeaderTable" />
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Goal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creator)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Goal.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creator.FullName)
        </td>
        <td>
            <partial name="Controls/_BtnEditNoText" model="item" />
            <partial name="Controls/_BtnDetails" model="item" />
            <partial name="Controls/_BtnDelete" model="item" />
            <partial name="Controls/_BtnAssign" model="item" />
        </td>
    </tr>
    }
</tbody>
<partial name="Controls/_FooterTable" />