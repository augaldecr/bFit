@model bFit.Web.Data.Entities.Common.State

@{
    ViewData["Title"] = "Provincia";
    ViewData["BackAction"] = "Index";
    ViewData["EditAction"] = "Edit";
    ViewData["DetailsAction"] = "Details";
}

<partial name="Controls/_Header" />

<div class="row">
    <div class="input-group mb-3 col-md-6">
        <div class="input-group-prepend">
            <span class="input-group-text" id="name">
                @Html.DisplayNameFor(model => model.Name):
            </span>
        </div>
        <input type="text" class="form-control" aria-label="name" disabled
               aria-describedby="name" value="@Html.DisplayFor(model => model.Name)">
    </div>

    <div class="input-group mb-3 col-md-6">
        <div class="input-group-prepend">
            <span class="input-group-text" id="country">
                @Html.DisplayNameFor(model => model.Country):
            </span>
        </div>
        <input type="text" class="form-control" aria-label="country" disabled
               aria-describedby="country" value="@Html.DisplayFor(model => model.Country.Name)">
    </div>
</div>
<div>
    <partial name="Controls/_BtnEdit" view-data="ViewData" model="@Model" />
    <partial name="Controls/_BtnBack" view-data="ViewData" />
</div>
<partial name="Controls/_Footer" />